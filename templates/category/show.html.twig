{% extends 'base.html.twig' %}
{% block body %}
    <h1>{{ category.name }}</h1>
    {% if category.description %}
        <p>{{ category.description }}</p>
    {% endif %}
    <h2>Products</h2>
    {% if products|length > 0 %}
        <ul>
            {% for product in products %}
                <li><a href="{{ path('app_product_show', {'id': product.id}) }}">{{ product.name }}</a> - ${{ product.price }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No products in this category.</p>
    {% endif %}
{% endblock %}