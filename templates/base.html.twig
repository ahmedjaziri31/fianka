<!DOCTYPE html>
<html lang="{{ app.request.locale|default('fr') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'site.title'|trans }}{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% block stylesheets %}{% endblock %}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" crossorigin="anonymous">


</head>
<body>

    <!-- =========================== NAVBAR =========================== -->
    <header>
        <nav class="navbar" id="navbar">
            <!-- logo on left -->
            <div class="nav-logo">
                <a href="{{ path('root', {'_locale': app.request.locale}) }}">
                    <img src="{{ asset('images/image00004.gif') }}" alt="FIANKA" class="logo-image">
                </a>
            </div>

            <!-- centered navigation links -->
            <div class="nav-links">
                <a href="#"><i class="fas fa-briefcase"></i> {{ 'nav.savoir_faire'|trans }}</a>
                <a href="{{ path('app_category_index', {'_locale': app.request.locale}) }}"><i class="fas fa-male"></i> {{ 'nav.homme'|trans }}</a>
                <a href="{{ path('app_category_index', {'_locale': app.request.locale}) }}"><i class="fas fa-female"></i> {{ 'nav.femme'|trans }}</a>
                <a href="{{ path('app_about', {'_locale': app.request.locale}) }}"><i class="fas fa-info-circle"></i> {{ 'nav.fianka'|trans }}</a>
            </div>

            <!-- right icons (only 3 icons) -->
            <div class="nav-icons">
                <ul class="social-icons">
                    <li>
                        <a href="{{ path('app_search', {'_locale': app.request.locale}) }}" aria-label="{{ 'nav.search'|trans }}">
                            <svg class="social-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/></svg>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_user_profile', {'_locale': app.request.locale}) }}" aria-label="{{ 'nav.user'|trans }}">
                            <svg class="social-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M224 256A128 128 0 1 0 224 0a128 128 0 1 0 0 256zm-45.7 48C79.8 304 0 383.8 0 482.3C0 498.7 13.3 512 29.7 512H418.3c16.4 0 29.7-13.3 29.7-29.7C448 383.8 368.2 304 269.7 304H178.3z"/></svg>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_cart_show', {'_locale': app.request.locale}) }}" aria-label="{{ 'nav.cart'|trans }}">
                            <svg class="social-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M0 24C0 10.7 10.7 0 24 0L69.5 0c22 0 41.5 12.8 50.6 32l411 0c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3l-288.5 0 5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5L488 336c13.3 0 24 10.7 24 24s-10.7 24-24 24l-288.3 0c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5L24 48C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z"/></svg>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <!-- ========== FLASH MESSAGES ========== -->
    {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message|trans }}</div>
    {% endfor %}

    <!-- ========== MAIN CONTENT ========== -->
    <main>
        {% block body %}
            <!-- Countdown Timer Section -->
            <section class="countdown-section">
                <h1>{{ 'countdown.title'|trans }}</h1>
                <div id="countdown">
                    <div class="time-unit"><span id="days">00</span><p>{{ 'countdown.days'|trans }}</p></div>
                    <div class="time-unit"><span id="hours">00</span><p>{{ 'countdown.hours'|trans }}</p></div>
                    <div class="time-unit"><span id="minutes">00</span><p>{{ 'countdown.minutes'|trans }}</p></div>
                    <div class="time-unit"><span id="seconds">00</span><p>{{ 'countdown.seconds'|trans }}</p></div>
                </div>
            </section>
        {% endblock %}
    </main>

    <!-- ========== NEWSLETTER ========== -->
    <section class="newsletter-section">
        <h2>{{ 'newsletter.title'|trans }}</h2>
        <p>{{ 'newsletter.description'|trans }}</p>
        <p>{{ 'newsletter.offer'|trans }}</p>
        <form action="{{ path('app_newsletter_subscribe', {'_locale': app.request.locale}) }}" method="post">
            <input type="email" name="email" placeholder="{{ 'newsletter.placeholder'|trans }}" required />
            <button type="submit">{{ 'newsletter.subscribe'|trans }}</button>
        </form>
        <p class="legal-text">{{ 'newsletter.legal'|trans|raw }}</p>
        <p class="legal-text">{{ 'newsletter.unsubscribe'|trans|raw }}</p>
    </section>

    <!-- ========== FOOTER ========== -->
    <footer class="footer">
        <div class="footer-columns">
            <!-- Ã€ PROPOS -->
            <div class="footer-column">
                <h3>{{ 'footer.about'|trans }}</h3>
                <ul>
                    <li><a href="{{ path('app_about', {'_locale': app.request.locale}) }}">{{ 'footer.our_story'|trans }}</a></li>
                    <li><a href="#">{{ 'footer.savoir_faire'|trans }}</a></li>
                    <li><a href="#">{{ 'footer.our_values'|trans }}</a></li>
                    <li><a href="#">{{ 'footer.engagements'|trans }}</a></li>
                </ul>
            </div>

            <!-- SERVICE CLIENT -->
            <div class="footer-column">
                <h3>{{ 'footer.customer_service'|trans }}</h3>
                <ul>
                    <li><a href="{{ path('care_pulls', {'_locale': app.request.locale}) }}">{{ 'footer.care_pulls'|trans }}</a></li>
                    <li><a href="{{ path('size_guide', {'_locale': app.request.locale}) }}">{{ 'footer.size_guide'|trans }}</a></li>
                </ul>
            </div>

            <!-- CONTACTEZ-NOUS -->
            <div class="footer-column">
                <h3>{{ 'footer.contact_us'|trans }}</h3>
                <ul>
                    <li>
                        <a href="tel:+21693946630">
                            <svg class="contact-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M497.4 361.8l-112-48c-12.5-5.4-27-1.5-35.4 9.2l-50.6 62c-99.2-48.7-151.3-100.8-200-200l62-50.6c10.7-8.4 14.6-22.9 9.2-35.4l-48-112C46.6 21.5 26.7 11.5 7.6 16.1L24.8 85.7c-18.4 4.5-32.5 20.2-34.7 38.9C-24.5 243.3 43.5 372 146.7 475.2c18.7 18.7 43.8 26.9 68.4 23l149-36.5c18.1-4.5 30.4-21.2 28.7-39.6l-1.6-7.2c-4.5-19-21.2-31.4-39.6-28.8z"/></svg>
                            {{ 'footer.phone'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="mailto:contact@fianka-shop.com">
                            <svg class="contact-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M48 64C21.5 64 0 85.5 0 112c0 15.1 7.1 29.3 19.2 38.4L236.8 313.6c11.4 8.5 27 8.5 38.4 0L492.8 150.4c12.1-9.1 19.2-23.3 19.2-38.4c0-26.5-21.5-48-48-48H48zM0 176V384c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V176L294.4 339.2c-22.8 17.1-54 17.1-76.8 0L0 176z"/></svg>
                            {{ 'footer.email'|trans }}
                        </a>
                    </li>
                    <li>
                        <a href="tel:+21693946630">
                            <svg class="contact-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222 0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27H223.9c122.3 0 224.1-99.6 224.1-222 0-59.3-25.2-115-67.1-157zm-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2 0-101.7 82.8-184.5 184.6-184.5 49.3 0 95.6 19.2 130.4 54.1 34.8 34.9 56.2 81.2 56.1 130.5 0 101.8-84.9 184.6-186.6 184.6zm101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18-5.1-1.9-8.8-2.8-12.5 2.8-3.7 5.6-14.3 18-17.6 21.8-3.2 3.7-6.5 4.2-12 1.4-32.6-16.3-54-29.1-75.5-66-5.7-9.8 5.7-9.1 16.3-30.3 1.8-3.7 .9-6.9-.5-9.7-1.4-2.8-12.5-30.1-17.1-41.2-4.5-10.8-9.1-9.3-12.5-9.5-3.2-.2-6.9-.2-10.6-.2-3.7 0-9.7 1.4-14.8 6.9-5.1 5.6-19.4 19-19.4 46.3 0 27.3 19.9 53.7 22.6 57.4 2.8 3.7 39.1 59.7 94.8 83.8 35.2 15.2 49 16.5 66.6 13.9 10.7-1.6 32.8-13.4 37.4-26.4 4.6-13 4.6-24.1 3.2-26.4-1.3-2.5-5-3.9-10.5-6.6z"/></svg>
                            {{ 'footer.whatsapp'|trans }}
                        </a>
                    </li>
                </ul>

                <h3>{{ 'footer.follow_us'|trans }}</h3>
                <ul class="social-icons">
                    <li><a href="#" aria-label="{{ 'social.instagram'|trans }}"><svg class="social-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"/></svg></a></li>
                    <li><a href="#" aria-label="{{ 'social.facebook'|trans }}"><svg class="social-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><path d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5 16.3 0 29.4 1.4 39.3 2.5V9.4C305.5 7 284.4 0 256.1 0 197.7 0 149 31.5 149 99.9v101.6H80v97.8H149z"/></svg></a></li>
                    <li><a href="#" aria-label="{{ 'social.tiktok'|trans }}"><svg class="social-icon-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M448 209.9a210.1 210.1 0 0 1 -122.8-39.3V349.4A162.6 162.6 0 1 1 185 188.3V278.2a74.6 74.6 0 1 0 52.2 71.2V0l88 0a121.2 121.2 0 0 0 1.9 22.2h0A122.2 122.2 0 0 0 381 102.4a121.4 121.4 0 0 0 67 20.1z"/></svg></a></li>
                </ul>
            </div>

            <!-- NOS ACCEPTIONS -->
            <div class="footer-column">
                <h3>{{ 'footer.language'|trans }}</h3>
                <div class="footer-language">
                    <select id="language-selector">
                        <option value="en" data-flag="{{ asset('images/flags/en.png') }}" {% if app.request.locale == 'en' %}selected{% endif %}>{{ 'lang.english'|trans }}</option>
                        <option value="fr" data-flag="{{ asset('images/flags/fr.png') }}" {% if app.request.locale == 'fr' %}selected{% endif %}>{{ 'lang.french'|trans }}</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>{{ 'footer.copyright'|trans({'%year%': "now"|date("Y")}) }}</p>
        </div>
    </footer>

    <!-- ========== SIMPLE JS (No build process needed!) ========== -->
    <script src="{{ asset('js/app.js') }}"></script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>