{% extends 'base.html.twig' %}

{% block title %}{{ 'forgot_password.title'|trans }}{% endblock %}

{% block body %}
<div class="forgot-password-container">
    <h2>{{ 'forgot_password.title'|trans }}</h2>
    <p>{{ 'forgot_password.instructions'|trans }}</p>
    <form method="post" action="{{ path('app_forgot_password', {'_locale': app.request.locale}) }}">
        <label for="email">{{ 'login.email'|trans }}</label>
        <input type="email" name="email" id="email" required>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('forgot_password') }}">
        <button type="submit">{{ 'forgot_password.submit'|trans }}</button>
    </form>
    <p class="back-to-login">
        <a href="{{ path('app_login', {'_locale': app.request.locale}) }}">{{ 'forgot_password.back_to_login'|trans }}</a>
    </p>
</div>
{% endblock %}